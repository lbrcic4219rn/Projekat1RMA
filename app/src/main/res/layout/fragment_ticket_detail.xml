<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.TicketDetailFragment">

    <ImageView
        android:id="@+id/editLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/editTicketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editLogo"
        android:text="TICLET TITLE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="26dp"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/editTicketTypeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Ticket Type"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketTitle"
        android:layout_marginVertical="25dp"
        android:textStyle="bold"
    />
    <TextView
        android:id="@+id/editTicketTypeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="2dp"
        android:text="Ticket Type"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketTitle"
        android:layout_marginVertical="25dp"
        />
    <TextView
        android:id="@+id/editTicketPriorityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Priority"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketTypeHeader"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/editTicketPriorityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="Major"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketTypeValue"
        android:layout_marginVertical="20dp"
        />
    <TextView
        android:id="@+id/editTicketEstimationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Estimation"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketPriorityHeader"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/editTicketEstimationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="5"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketPriorityValue"
        android:layout_marginVertical="20dp"
        />

    <TextView
        android:id="@+id/editTicketLoggedTimeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Logged time"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketEstimationHeader"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/editTicketLoggedTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="3"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketEstimationValue"
        android:layout_marginVertical="20dp"
        />

    <TextView
        android:id="@+id/editTicketDescriptionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Description"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/editTicketLoggedTimeHeader"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DESCIJAWDIHAOWDHAWOIDHAOIWDHIOAWHDIO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTicketDescriptionHeader"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        />



    <Button
        android:id="@+id/editButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>