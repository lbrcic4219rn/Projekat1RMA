<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ticketLogo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp">
    </ImageView>

    <TextView
        android:id="@+id/ticketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="TITLE"
        app:layout_constraintStart_toEndOf="@id/ticketLogo"
        app:layout_constraintBottom_toTopOf="@id/ticketDescription"
        android:layout_marginHorizontal="16dp"/>


    <TextView
        android:id="@+id/ticketDescription"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="DESCRIPTIONawdawdawdadwawdawdadwawdawdawdaawd"
        app:layout_constraintTop_toBottomOf="@id/ticketTitle"
        app:layout_constraintStart_toEndOf="@id/ticketLogo"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/topButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/bottomButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topButton"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>